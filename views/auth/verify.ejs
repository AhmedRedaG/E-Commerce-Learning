<%- include('../includes/header') %>
  <link rel='stylesheet' href='/css/login.css'>
  </head>

  <body>
    <%- include('../includes/navigation') %>

    <main>
      <h2>Reset Password</h2>
      <% if (errorMessage.length > 0) { %>
        <p style="color:red; margin-bottom:10px; font-size:1.2rem;"><%= errorMessage %></p>
      <% } %>
      <form action="/<% if (mailChecked) { %>check<% } else { %>verify<% } %>" method="POST">
        <div>
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required <% if (mailChecked) { %>value="<%= email %>" readonly <% } %> />
        </div>
        <% if (mailChecked) { %>
          <div>
            <label for="resetToken">Reset Token</label>
            <input type="text" id="resetToken" name="resetToken" required />
          </div>
        <% } %>
        <button type="submit"><% if (mailChecked) { %>Submit Token<% } else { %>Send Token<% } %></button>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </form>
    </main>
  </body>
</html>
